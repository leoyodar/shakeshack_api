<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Administrar Usuarios</h3>
        {{#if usuarios}}
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each usuarios}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{nombre}}</td>
                                <td>{{apellidos}}</td>
                                <td>{{direccion}}</td>
                                <td>{{telefono}}</td>
                                <td>{{correo}}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/edit-user/{{id}}" class="btn btn-warning p-2"><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a href="/delete-user/{{id}}" class="btn btn-danger p-2"><i class="fa-solid fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                </tbody>
                <tfoot>
                </tfoot>
            </table>
        {{else}}
            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3>No hay registros</h3>
                </div>
                <div class="card-body">
                    <p>Crea un nuevo usuario</p>
                    <a href="/add-user" class="btn" style="background-color: #72AD54; color: #ffffff">Crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>